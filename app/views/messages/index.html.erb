<p id="notice"><%= notice %></p>

<h1>Mensajes</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Mensaje</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.title %></td>
        <td><%= message.description %></td>
        <td><%= link_to 'Mostrar', message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @messages %>

<br>

<%= link_to 'Nuevo  mensaje', new_message_path, :class => "btn btn-default" %>
